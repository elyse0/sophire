{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "declaration": true,
    "composite": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/",
    "baseUrl": "src/",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  }
}
